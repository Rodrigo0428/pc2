@model AppBanco.Models.CuentaBancaria

@{
    ViewData["Title"] = "Crear Cuenta Bancaria";
}

 @using (Html.BeginForm("EnviarMensaje", "CuentaBancaria", FormMethod.Post))
    {
    <section>
        <fieldset>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <h1 class="display-6 fw-bold text-center">@ViewData["Title"]</h1>
                        <form asp-action="Create" asp-controller="CuentaBancaria" method="post">
                            <div class="mb-3">
                                <label asp-for="NombreTitular" class="form-label">Nombre del Titular:</label>
                                <input asp-for="NombreTitular" class="form-control" type="text" placeholder="Ingrese su nombre" aria-label="Nombre del Titular" required/>
                                <span asp-validation-for="NombreTitular" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TipoCuenta" class="form-label">Tipo de Cuenta:</label>
                                <select asp-for="TipoCuenta" class="form-select" aria-label="Tipo de Cuenta" required>
                                    <option value="">Seleccione un tipo de cuenta</option>
                                    <option value="Ahorro">Ahorro</option>
                                    <option value="Corriente">Corriente</option>
                                </select>
                                <span asp-validation-for="TipoCuenta" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Saldo" class="form-label">Saldo Inicial:</label>
                                <input asp-for="Saldo" class="form-control" type="number" step="0.01" placeholder="Ingrese el saldo inicial" aria-label="Saldo Inicial" required/>
                                <span asp-validation-for="Saldo" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico:</label>
                                <input asp-for="CorreoElectronico" class="form-control" type="email" placeholder="Ingrese su correo electrónico" aria-label="Correo Electrónico" required/>
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contraseña" class="form-label">Contraseña:</label>
                                <input asp-for="Contraseña" class="form-control" type="password" placeholder="Ingrese su contraseña" aria-label="Contraseña" required/>
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Crear Cuenta</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <h2>@ViewData["Message"]</h2>
                        </div>
                        </div>
                </div>
            </div>
        </fieldset>
    </section>

    
    }